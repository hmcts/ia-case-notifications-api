{
    "description": "RIA-3488 Send appeal submitted notification to Home Office",
    "enabled": "{$featureFlag.homeOfficeGovNotifyEnabled}",
    "request": {
      "uri": "/asylum/ccdAboutToSubmit",
      "credentials": "LegalRepresentative",
      "input": {
        "id": 348816,
        "eventId": "submitAppeal",
        "state": "pendingPayment",
        "caseData": {
          "template": "minimal-appeal-submitted.json",
          "replacements": {
            "hearingCentre": "manchester"
          }
        }
      }
    },
    "expectation": {
      "status": 200,
      "errors": [],
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "manchester",
          "notificationsSent": [
            {
              "id": "348816_APPEAL_SUBMITTED_CASE_OFFICER",
              "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/"
            },
            {
              "id": "348816_APPEAL_SUBMITTED_HOME_OFFICE",
              "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/"
            }
          ]
        }
      },
      "notifications": [
        {
          "reference": "348816_APPEAL_SUBMITTED_CASE_OFFICER",
          "recipient": "{$hearingCentreEmailAddresses.manchester}",
          "subject": "Immigration and Asylum appeal: appeal submitted",
          "body": [
            "PA/12345/2019",
            "Talha Awan",
            "{$iaExUiFrontendUrl}"
          ]
        },
        {
          "reference": "348816_APPEAL_SUBMITTED_HOME_OFFICE",
          "recipient": "{$apcPrivateHomeOfficeEmailAddress}",
          "subject": "Immigration and Asylum appeal: appeal submitted",
          "body": [
            "PA/12345/2019",
            "Talha Awan",
            "{$iaExUiFrontendUrl}"
          ]
        }
      ]
    }
  }
