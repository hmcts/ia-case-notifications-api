{
  "description": "RIA-3120 Send appeal ended for non payment notification to legal representative (EA or HU appeal type)",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "CaseOfficer",
    "input": {
      "id": 3120,
      "eventId": "endAppeal",
      "state": "pendingPayment",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "appealType":"refusalOfHumanRights",
          "paymentStatus":"Payment due"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "appealType":"refusalOfHumanRights",
        "paymentStatus":"Payment due",
        "notificationsSent": [
          {
            "id": "3120_APPEAL_ENDED_NON_PAYMENT_LEGAL_REPRESENTATIVE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "3120_APPEAL_ENDED_NON_PAYMENT_LEGAL_REPRESENTATIVE",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Immigration and Asylum appeal: This appeal has been struck out",
        "body": [
          "PA/12345/2019",
          "CASE001",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      }
    ]
  }
}
