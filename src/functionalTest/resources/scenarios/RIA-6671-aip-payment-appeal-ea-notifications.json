      "id": 66713,
      "eventId": "paymentAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "aip-minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "manchester",
          "appealType": "refusalOfEu",
          "paymentStatus": "Paid",
          "subscriptions": [
            {
              "id": "1",
              "value": {
                "subscriber": "appellant",
