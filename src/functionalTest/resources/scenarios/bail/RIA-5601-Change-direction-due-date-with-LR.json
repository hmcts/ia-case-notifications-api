{
  "description": "RIA-5601 send change direction due date notification to HomeOffice and legal representative",
  "launchDarklyKey": "tcw-notifications-feature:true",
  "request": {
    "uri": "/bail/ccdAboutToSubmit",
    "credentials": "AdminOfficer",
    "input": {
      "id": 5601,
      "eventId": "uploadDocuments", //RIA-5601 change event id
      "state": "bailSummaryUploaded",
      "caseData": {
        "template": "minimal-bail-application-submitted.json",
        "replacements": {
          "isLegallyRepresentedForFlag": "Yes",
          "currentCaseStateVisibleToJudge": "bailSummaryUploaded",
          "currentCaseStateVisibleToHomeOffice": "bailSummaryUploaded",
          "currentCaseStateVisibleToAdminOfficer": "bailSummaryUploaded",
          "currentCaseStateVisibleToLegalRepresentative": "bailSummaryUploaded"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-bail-application-submitted.json",
      "replacements": {
        "isLegallyRepresentedForFlag": "Yes",
        "currentCaseStateVisibleToJudge": "bailSummaryUploaded",
        "currentCaseStateVisibleToHomeOffice": "bailSummaryUploaded",
        "currentCaseStateVisibleToAdminOfficer": "bailSummaryUploaded",
        "currentCaseStateVisibleToLegalRepresentative": "bailSummaryUploaded",
        "notificationsSent": [
          {
            "id": "5601_CHANGE_DIRECTION_DUE_DATE_HOME_OFFICE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "5601_CHANGE_DIRECTION_DUE_DATE_LEGAL_REPRESENTATIVE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "5601_CHANGE_DIRECTION_DUE_DATE_HOME_OFFICE",
        "recipient": "{$bailHomeOfficeEmailAddress}",
        "subject": "Bail application: You have a direction",
        "body": [
          "1650-6221-2061-5101",
          "John Smith",
          "{$iaExUiFrontendUrl}",
          "A direction due date has been changed in the online service.",
          "Sign in to your account to view the updated direction(s) in the directions tab."
        ]
      },
      {
        "reference": "5601_CHANGE_DIRECTION_DUE_DATE_LEGAL_REPRESENTATIVE",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Bail application: You have a direction",
        "body": [
          "1650-6221-2061-5101",
          "John Smith",
          "{$iaExUiFrontendUrl}",
          "A direction due date has been changed in the online service.",
          "Sign in to your account to view the updated direction(s) in the directions tab."
        ]
      }
    ]
  }
}
