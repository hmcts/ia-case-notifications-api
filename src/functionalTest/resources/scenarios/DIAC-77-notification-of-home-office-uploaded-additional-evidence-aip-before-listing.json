{
  "description": "DIAC-77 Notification of aip uploaded additional evidence (before listing)",
  "launchDarklyKey": "tcw-notifications-feature:true",
  "request": {
      "uri": "/asylum/ccdAboutToSubmit",
      "credentials": "Citizen",
      "input": {
        "id": 771,
        "eventId": "uploadAdditionalEvidence",
        "state": "caseUnderReview",
        "caseData": {
          "template": "aip-minimal-appeal-submitted.json"
        }
      }
    },
    "expectation": {
      "status": 200,
      "errors": [],
      "caseData": {
        "template": "aip-minimal-appeal-submitted.json",
        "replacements": {
          "notificationsSent": [
            {
              "id": "771_UPLOADED_ADDITIONAL_EVIDENCE_HOME_OFFICE",
              "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
            }
          ]
        }
      },
      "notifications": [
        {
          "reference": "771_UPLOADED_ADDITIONAL_EVIDENCE_HOME_OFFICE",
          "recipient": "{$respondentEmailAddresses.respondentReviewDirection}",
          "subject": "Immigration and Asylum appeal: additional evidence uploaded",
          "body": [
            "PA/12345/2019",
            "A1234567",
            "Pablo Jimenez",
            "{$iaExUiFrontendUrl}",
            "{$customerServices.telephoneNumber}",
            "{$customerServices.emailAddress}"
          ]
        }
      ]
    }
  }
