{
  "description": "RIA-6980 Notification for home office when appeal is decision without hearing",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "CaseOfficer",
    "input": {
      "id": 6980,
      "eventId": "decisionWithoutHearing",
      "state": "respondentReview",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "journeyType": "aip",
          "listCaseHearingCentre": "taylorHouse",
          "subscriptions": [
            {
              "id": "1",
              "value": {
                "subscriber": "appellant",
                "email": "{$TEST_CITIZEN_USERNAME}",
                "wantsEmail": "Yes",
                "mobileNumber": "{$TEST_CITIZEN_MOBILE}",
                "wantsSms": "Yes"
              }
            }
          ]
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "notificationsSent": [
          {
            "id": "6980_DECISION_WITHOUT_HEARING_HOME_OFFICE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "6980_DECISION_WITHOUT_HEARING_HOME_OFFICE",
        "recipient": "{$homeOfficeEmailAddresses.hattonCross}",
        "subject": "Immigration and Asylum appeal: This appeal will be decided without a hearing\n",
        "body": [
          "PA/12345/2019",
          "A1234567",
          "LP/12345/2019",
          "Talha Awan",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      }
    ]
  }
}
