{
  "description": "RIA-7662 Send notification to LR when turn on notification event completed by admin or legal officer after listing",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "AdminOfficer",
    "input": {
      "eventId": "turnOnNotifications",
      "state": "appealSubmitted",
      "caseData": {
        "template": "minimal-ejp-appeal-submitted.json",
        "replacements": {
          "listCaseHearingCentre": "taylorHouse",
          "ariaListingReference": "LP/12345/2019",
          "appealReferenceNumber": "PA/12345/2018",
          "appellantInDetention": "Yes",
          "detentionFacility": "immigrationRemovalCentre",
          "ircName": "Brookhouse",
          "isNotificationTurnedOff": "Yes",
          "isLegallyRepresentedEjp": "Yes"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-ejp-appeal-submitted.json",
      "replacements": {
        "listCaseHearingCentre": "taylorHouse",
        "ariaListingReference": "LP/12345/2019",
        "appealReferenceNumber": "PA/12345/2018",
        "detentionFacility": "immigrationRemovalCentre",
        "ircName": "Brookhouse",
        "notificationsSent": [
          {
            "id": "7662_7662_NOTIFICATIONS_TURNED_ON",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "7662_NOTIFICATIONS_TURNED_ON",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "\tImmigration and asylum appeal: Appeal transferred to the First-tier Tribunal",
        "body": [
          "HMCTS reference: PA/12345/2019",
          "Your reference: CASE002",
          "Appellant name: Talha Awan",
          "The online service: {$iaExUiFrontendUrl}"
        ]
      }
    ]
  }
}

