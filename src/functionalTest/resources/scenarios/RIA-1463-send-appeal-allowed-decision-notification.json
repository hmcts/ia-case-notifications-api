{
  "description": "RIA-1463 Send appeal (allowed) decision notification to Home Office and Legal Representative",
  "enabled": "{$featureFlag.homeOfficeGovNotifyEnabled}",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "CaseOfficer",
    "input": {
      "id": 1463123,
      "eventId": "sendDecisionAndReasons",
      "state": "decided",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "ariaListingReference": "LP/12345/2019",
          "isDecisionAllowed": "allowed",
          "notificationsSent": []
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "isDecisionAllowed": "allowed",
        "notificationsSent": [
          {
            "id": "1463123_APPEAL_OUTCOME_HOME_OFFICE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/"
          },
          {
            "id": "1463123_APPEAL_OUTCOME_LEGAL_REPRESENTATIVE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "1463123_APPEAL_OUTCOME_HOME_OFFICE",
        "recipient": "{$allowedAppealHomeOfficeEmailAddress}",
        "subject": "Immigration and Asylum appeal: decision and reasons",
        "body": [
          "PA/12345/2019",
          "LP/12345/2019",
          "A1234567",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      },
      {
        "reference": "1463123_APPEAL_OUTCOME_LEGAL_REPRESENTATIVE",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Immigration and Asylum appeal: decision and reasons",
        "body": [
          "PA/12345/2019",
          "LP/12345/2019",
          "CASE001",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
