{
  "description": "RIA-9525 Send appeal submitted paid notification for HU appeal Type for admin and represented cases",
  "launchDarklyKey": "tcw-notifications-feature:true",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "AdminOfficer",
    "input": {
      "id": 95253,
      "eventId": "markAppealPaid",
      "state": "appealSubmitted",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "isAdmin": "Yes",
          "appellantsRepresentation": "No",
          "legalRepEmail": "{$TEST_LAW_FIRM_A_USERNAME}",
          "appealType": "refusalOfHumanRights",
          "paymentStatus": "Paid"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "isAdmin": "Yes",
        "appellantsRepresentation": "No",
        "legalRepEmail": "{$TEST_LAW_FIRM_A_USERNAME}",
        "appealType": "refusalOfHumanRights",
        "paymentStatus": "Paid",
        "notificationsSent": [
          {
            "id": "95253_APPEAL_SUBMITTED_HOME_OFFICE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "95253_PENDING_PAYMENT_PAID_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "95253_APPEAL_SUBMITTED_HOME_OFFICE",
        "recipient": "{$apcPrivateHomeOfficeEmailAddress}",
        "subject": "Immigration and Asylum appeal: appeal submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      },
      {
        "reference": "95253_PENDING_PAYMENT_PAID_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.taylorHouse}",
        "subject": "Immigration and Asylum appeal: A fee has been paid",
        "body": [
          "PA/12345/2019",
          "Talha Awan",
          "{$iaExUiFrontendUrl}"
        ]
      }
    ]
  }
}
