{
  "description": "RIA-2405-RIA-2936-RIA-4359 AIP Send appeal out of time submitted notifications (Email and SMS) and Email to Case worker",
  "launchDarklyKey": "tcw-notifications-feature:true",
  "enabled": "{$featureFlag.homeOfficeGovNotifyEnabled}",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "Citizen",
    "input": {
      "id": 1004,
      "eventId": "submitAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "aip-minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "manchester",
          "submissionOutOfTime": "Yes",
          "subscriptions": [
            {
              "id": "1",
              "value": {
                "subscriber": "appellant",
                "email": "{$TEST_CITIZEN_USERNAME}",
                "wantsEmail": "Yes",
                "mobileNumber": "{$TEST_CITIZEN_MOBILE}",
                "wantsSms": "Yes"
              }
            }
          ]
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "aip-minimal-appeal-submitted.json",
      "replacements": {
        "hearingCentre": "manchester",
        "submissionOutOfTime": "Yes",
        "subscriptions": [
          {
            "id": "1",
            "value": {
              "subscriber": "appellant",
              "email": "{$TEST_CITIZEN_USERNAME}",
              "wantsEmail": "Yes",
              "mobileNumber": "{$TEST_CITIZEN_MOBILE}",
              "wantsSms": "Yes"
            }
          }
        ],
        "notificationsSent": [
          {
            "id": "1004_APPEAL_SUBMITTED_HOME_OFFICE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "1004_APPEAL_SUBMITTED_OUT_OF_TIME_APPELLANT_AIP_EMAIL",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "1004_APPEAL_SUBMITTED_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "1004_APPEAL_SUBMITTED_OUT_OF_TIME_APPELLANT_AIP_SMS",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "1004_APPEAL_SUBMITTED_OUT_OF_TIME_APPELLANT_AIP_EMAIL",
        "recipient": "{$TEST_CITIZEN_USERNAME}",
        "subject": "Immigration and Asylum appeal: Your appeal details have been sent",
        "body": [
          "PA/12345/2019",
          "A1234567",
          "Pablo Jimenez,",
          "{$TODAY+5|d MMM yyyy}",
          "{$iaAipFrontendUrl}"
        ]
      },
      {
        "reference": "1004_APPEAL_SUBMITTED_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.manchester}",
        "subject": "Immigration and Asylum appeal: appeal submitted",
        "body": [
          "PA/12345/2019",
          "Pablo Jimenez",
          "{$iaExUiFrontendUrl}"
        ]
      },
      {
        "reference": "1004_APPEAL_SUBMITTED_OUT_OF_TIME_APPELLANT_AIP_SMS",
        "recipient": "{$TEST_CITIZEN_MOBILE}",
        "subject": "",
        "body": [
          "PA/12345/2019",
          "{$TODAY+5|d MMM yyyy}",
          "{$iaAipFrontendUrl}"
        ]
      }
    ]
  }
}
