{
  "description": "RIA-1024 Send case submitted notification to case officer - Taylor House hearing centre (save and continue disabled)",
  "disabled": "{$featureFlag.isSaveAndContinueEnabled}",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "id": 1024,
      "eventId": "buildCase",
      "state": "caseBuilding",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "bradford"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "hearingCentre": "bradford",
        "notificationsSent": [
          {
            "id": "1024_CASE_SUBMITTED_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "1024_CASE_SUBMITTED_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.bradford}",
        "subject": "Immigration and Asylum appeal: Appeal Skeleton Argument submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan"
        ]
      }
    ]
  }
}
