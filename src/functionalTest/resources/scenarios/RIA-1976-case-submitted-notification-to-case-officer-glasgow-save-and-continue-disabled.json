{
  "description": "RIA-1976 Send case submitted notification to case officer (IAC Glasgow) (save and continue disabled)",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "id": 1006,
      "eventId": "buildCase",
      "state": "caseBuilding",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "glasgow"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "hearingCentre": "glasgow",
        "notificationsSent": [
          {
            "id": "1006_CASE_SUBMITTED_LEGAL_REPRESENTATIVE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/"
          },
          {
            "id": "1006_CASE_SUBMITTED_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "1006_CASE_SUBMITTED_LEGAL_REPRESENTATIVE",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Immigration and Asylum appeal: Appeal Skeleton Argument submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan"
        ]
      },
      {
        "reference": "1006_CASE_SUBMITTED_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.glasgow}",
        "subject": "Immigration and Asylum appeal: Appeal Skeleton Argument submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan"
        ]
      }
    ]
  }
}
