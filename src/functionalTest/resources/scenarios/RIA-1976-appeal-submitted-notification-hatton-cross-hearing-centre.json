{
  "description": "RIA-1976 Send appeal submitted notification (IAC Hatton Cross)",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "id": 1007,
      "eventId": "submitAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "hattonCross"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "hearingCentre": "hattonCross",
        "notificationsSent": [
          {
            "id": "1007_APPEAL_SUBMITTED_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "1007_APPEAL_SUBMITTED_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.hattonCross}",
        "subject": "Asylum appeal: new appeal submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan",
          "{$iaCcdFrontendUrl}"
        ]
      }
    ]
  }
}
