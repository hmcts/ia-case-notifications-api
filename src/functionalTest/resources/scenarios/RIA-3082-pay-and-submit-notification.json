{
  "description": "RIA-3082 Send appeal submitted notification to Case Officer and Home Office after successful pay and submit",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "id": 3082,
      "eventId": "payAndSubmitAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "manchester",
          "paymentStatus": "Paid"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "hearingCentre": "manchester",
        "notificationsSent": [
          {
            "id": "3082_APPEAL_SUBMITTED_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "3082_APPEAL_SUBMITTED_HOME_OFFICE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "3082_APPEAL_SUBMITTED_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.manchester}",
        "subject": "Immigration and Asylum appeal: appeal submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan",
          "{$iaExUiFrontendUrl}"
        ]
      },
      {
        "reference": "3082_APPEAL_SUBMITTED_HOME_OFFICE",
        "recipient": "{$endAppealHomeOfficeEmailAddress}",
        "subject": "Immigration and Asylum appeal: appeal submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      }
    ]
  }
}
