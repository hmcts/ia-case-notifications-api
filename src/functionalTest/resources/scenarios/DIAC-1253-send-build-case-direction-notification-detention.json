{
  "description": "DIAC-1253 Send build case direction notification for detention cases",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "CaseOfficer",
    "input": {
      "id": 923422,
      "eventId": "requestCaseBuilding",
      "state": "caseBuilding",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "appellantInDetention": "Yes",
          "legalRepEmail": "{$TEST_LAW_FIRM_A_USERNAME}",
          "notificationsSent": []
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "appellantsRepresentation": "No",
        "legalRepEmail": "{$TEST_LAW_FIRM_A_USERNAME}",
        "notificationsSent": [
          {
            "id": "923422_LEGAL_REPRESENTATIVE_REQUEST_CASE_BUILDING",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "923422_LEGAL_REPRESENTATIVE_REQUEST_CASE_BUILDING",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Immigration and Asylum appeal: review Build your case direction",
        "body": [
          "PA/12345/2019",
          "CASE001",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "You must now build your case to enable the respondent to conduct a thorough review of the appeal",
          "By the date indicated below the Appellant is directed to",
          "{$TODAY+28|d MMM yyyy}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      }
    ]
  }
}
