{
  "description": "RIA-3219 Send pending payment paid notification to legal representative (HU appeal type)",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "id": 3002,
      "eventId": "makePayment",
      "state": "pendingPayment",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "appealType":"refusalOfHumanRights",
          "paymentStatus":"Success"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "appealType":"refusalOfHumanRights",
        "paymentStatus":"Success",
        "notificationsSent": [
          {
            "id": "3002_PENDING_PAYMENT_PAID_LEGAL_REPRESENTATIVE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "3002_PENDING_PAYMENT_PAID_LEGAL_REPRESENTATIVE",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Immigration and Asylum appeal: Your fee has been paid",
        "body": [
          "PA/12345/2019",
          "CASE001",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      }
    ]
  }
}
