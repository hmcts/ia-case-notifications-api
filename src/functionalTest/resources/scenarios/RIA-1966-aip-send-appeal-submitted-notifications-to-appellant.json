{
  "description": "RIA-1966 AIP Send appeal submitted notifications (Email and SMS) and Email to Case worker",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "Citizen",
    "input": {
      "id": 1003,
      "eventId": "submitAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "aip-minimal-appeal-submitted-aip.json",
        "replacements": {
          "hearingCentre": "manchester",
          "subscriptions": [
            {
              "id": "1",
              "value": {
                "subscriber": "appellant",
                "email": "{$TEST_CITIZEN_USERNAME}",
                "wantsEmail": "Yes",
                "mobileNumber": "{$TEST_CITIZEN_MOBILE}",
                "wantsSms": "Yes"
              }
            }
          ]
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted-aip.json",
      "replacements": {
        "hearingCentre": "manchester",
        "subscriptions": [
          {
            "id": "1",
            "value": {
              "subscriber": "appellant",
              "email": "{$TEST_CITIZEN_USERNAME}",
              "wantsEmail": "Yes",
              "mobileNumber": "{$TEST_CITIZEN_MOBILE}",
              "wantsSms": "Yes"
            }
          }
        ],
        "notificationsSent": [
          {
            "id": "1003_APPEAL_SUBMITTED_APPELLANT_AIP_EMAIL",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "1003_APPEAL_SUBMITTED_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "1003_APPEAL_SUBMITTED_APPELLANT_AIP_SMS",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "1003_APPEAL_SUBMITTED_APPELLANT_AIP_EMAIL",
        "recipient": "{$TEST_CITIZEN_USERNAME}",
        "subject": "Your appeal details have been sent",
        "body": [
          "Appeal reference: PA/12345/2019",
          "Home Office reference: A1234567",
          "Dear Pablo Jimenez,",
          "Your appeal details have been sent to the Tribunal",
          "A Tribunal Caseworker will contact you by {$TODAY+14|d MMM yyyy} to tell you what to do next",
          "Sign in to your account to see how your appeal is progressing:",
          "{$iaAipFrontendUrl}",
          "#How to contact the Tribunal",
          "Telephone: 0300 123 1711 (Monday to Friday, 8.30am to 5pm)"
        ]
      },
      {
        "reference": "1003_APPEAL_SUBMITTED_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.manchester}",
        "subject": "Asylum appeal: new appeal submitted",
        "body": [
          "Appeal reference number: PA/12345/2019",
          "Appellant name: Pablo Jimenez",
          "Link to the online service: {$iaCcdFrontendUrl}",
          "A new asylum appeal has been submitted.",
          "To access the new appeal, login to the pilot service.",
          "If the appeal is suitable to go ahead you should direct the respondent to supply their evidence.",
          "First-tier Tribunal (Immigration and Asylum Chamber)"
        ]
      },
      {
        "reference": "1003_APPEAL_SUBMITTED_APPELLANT_AIP_SMS",
        "recipient": "{$TEST_CITIZEN_MOBILE}",
        "subject": "",
        "body": [
          "Your appeal details have been sent to the Tribunal. Your appeal reference number is PA/12345/2019",
          "A Tribunal Caseworker will contact you by {$TODAY+14|d MMM yyyy} to tell you what to do next.",
          "Sign in to your account to see how your appeal is progressing:",
          "{$iaAipFrontendUrl}"
        ]
      }
    ]
  }
}
