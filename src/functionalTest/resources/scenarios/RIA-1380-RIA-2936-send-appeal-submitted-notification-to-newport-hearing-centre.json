{
  "description": "RIA-1380-RIA-2936 Send appeal submitted notification to Columbus House (Newport hearing centre)",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "id": 1008,
      "eventId": "submitAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "hearingCentre": "newport"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "hearingCentre": "newport",
        "notificationsSent": [
          {
            "id": "1008_APPEAL_SUBMITTED_CASE_OFFICER",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "1008_APPEAL_SUBMITTED_CASE_OFFICER",
        "recipient": "{$hearingCentreEmailAddresses.newport}",
        "subject": "Immigration and Asylum appeal: appeal submitted",
        "body": [
          "PA/12345/2019",
          "Talha Awan",
          "{$iaExUiFrontendUrl}"
        ]
      }
    ]
  }
}
